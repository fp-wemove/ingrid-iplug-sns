<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>ingrid-releases-pom</artifactId>
    <groupId>de.ingrid</groupId>
    <version>2.3.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.ingrid</groupId>
  <artifactId>ingrid-iplug-sns</artifactId>
  <packaging>jar</packaging>
  <version>3.0.0-SNAPSHOT</version>
  <name>Ingrid iPlug SNS</name>
  <scm>
    <connection>scm:svn:https://harrison.its-technidata.de:444/svn/ingrid/ingrid-iplug-sns/trunk</connection>
    <developerConnection>scm:svn:https://harrison.its-technidata.de:444/svn/ingrid/ingrid-iplug-sns/trunk</developerConnection>
  </scm>
  <dependencies>
    <dependency>
      <groupId>de.ingrid</groupId>
      <artifactId>ingrid-iplug-admin-step1-sns</artifactId>
	  <type>war</type>
    </dependency>
    <dependency>
      <groupId>de.ingrid</groupId>
      <artifactId>ingrid-iplug</artifactId>
      <exclusions>
        <exclusion>
          <groupId>opensymphony</groupId>
          <artifactId>quartz</artifactId>
        </exclusion>
        <exclusion>
          <groupId>commons-betwixt</groupId>
          <artifactId>commons-betwixt</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>de.ingrid</groupId>
      <artifactId>ingrid-external-service-sns</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-el</groupId>
      <artifactId>commons-el</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
  </dependencies>
  <!-- NEVER DELETE: InGrid repo needed for download of parent pom if not present ! -->
  <repositories>
        <repository>
            <id>de.ingrid.all</id>
			<name>InGrid Repo Maven</name>
			<url>http://harrison.its-technidata.de/archiva/repository/ingrid-all</url>
        </repository>
    </repositories>
  <build>
    <finalName>${project.artifactId}-${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <!--  
                one of these: 
                IPLUG_SE, IPLUG_DSC, IPLUG_SNS, IPLUG_TAMINO, IPLUG_FPN, IPLUG_G2K, IPLUG_CSW, IPLUG_CSW_DSC, OTHER
                see ingrid-utils:de.ingrid.utils.metadata.IPlugType
              -->
              <iPlug-Type>IPLUG_SNS</iPlug-Type>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
            <!-- Add Type of Component to Manifest of Installer for Upgrade Server -->
            <configuration>
                <archive>
                  <manifestEntries>
                      <ingridComponentType>IPLUG_SNS</ingridComponentType>
                </manifestEntries>
                </archive>
            </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
		  <skip>true</skip>
          <!--excludes>
            <exclude>**/SNSControllerTest.java</exclude>
          </excludes-->
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>gssoil</id>
      <build>
        <plugins>
      <!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
      <!-- unzip all GSSoil Thesaurus Gazetteer resources and libs to target -->
      <!-- USE THIS IF YOU SUPPLY IPLUG FOR GS SOIL -->
      <!-- ADD THESE TO YOUR ECLIPSE libs / sourcepath to run GS Soil unit tests -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-gssoil</id>
            <phase>package</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>gssoil</groupId>
                  <artifactId>thesaurus-gazetteer-resources</artifactId>
                  <version>2.0.1</version>
                  <type>zip</type>
                  <outputDirectory>${project.build.directory}/gssoil/conf</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>gssoil</groupId>
                  <artifactId>thesaurus-gazetteer-libs</artifactId>
                  <version>2.0.1</version>
                  <type>zip</type>
                  <outputDirectory>${project.build.directory}/gssoil/lib</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
<!-- NO SEPARATE REPO LIBS FOR GSSOIL ! WE EXTRACT EVERYTHING FROM ZIP FILE (see above, "thesaurus-gazetteer-libs") !
SO WE CAN JUST UPDATE LIBS FROM EDISOFT DELIVERIES !
          <execution>
            <id>copy-gssoil</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>net.htmlparser.jericho</groupId>
                  <artifactId>jericho-html</artifactId>
                  <version>3.1</version>
                  <outputDirectory>${project.build.directory}/gssoil/lib</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
-->
        </executions>
      </plugin>
        </plugins>
      </build>
